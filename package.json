{
  "name": "nrfcloud-device-simulator",
  "version": "1.0.0",
  "description": "paring simulator for nrfcloud-compatible devices",
  "main": "dist/src/index.js",
  "typings": "dist/src/index.d.ts",
  "scripts": {
    "precompile": "npm run clean",
    "clean": "rimraf dist/*",
    "build": "npm run lint && npm run compile",
    "compile": "npm run compile:ts",
    "compile:ts": "tsc",
    "lint": "tslint --project ./tsconfig.json",
    "test": "echo \"Error: no test specified\" && exit 1",
    "postinstall": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/NordicSemiconductor/nrfcloud-device-simulator.git"
  },
  "author": "Nordic Semiconductor ASA | nordicsemi.no",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/NordicSemiconductor/nrfcloud-device-simulator/issues"
  },
  "homepage": "https://github.com/NordicSemiconductor/nrfcloud-device-simulator#readme",
  "devDependencies": {
    "@types/jest": "^21.1.2",
    "@types/node": "^8.0.34",
    "aws-iot-device-sdk": "^2.1.0",
    "aws-sdk": "^2.131.0",
    "jest": "^21.2.1",
    "mqtt": "^2.13.0",
    "pem": "^1.12.0",
    "ts-jest": "^21.1.2",
    "tslint": "^5.7.0",
    "typescript": "^2.5.3"
  },
  "dependencies": {
    "dotenv": "^4.0.0"
  },
  "jest": {
    "transform": {
      ".(ts|tsx)": "./node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json"
    ]
  }
}
