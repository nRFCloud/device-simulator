{
  "name": "@nrfcloud/device-simulator",
  "version": "0.0.0-development",
  "description": "simulates nRF Connect for Cloud devices",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "bin": "dist/cli.js",
  "scripts": {
    "precompile": "npm run schemas2ts",
    "build": "npm run lint && npm run compile",
    "compile": "npm run compile:ts",
    "compile:ts": "tsc",

    "lintfix": "tslint --project ./tsconfig.json --fix",
    "lint": "npm run tslint && npm run prettier:lint",
    "tslint": "tslint --project ./tsconfig.json",
    "prettier": "prettier --write \"./**/*.ts\"",
    "prettier:lint": "prettier --list-different \"./**/*.ts\"",
    "pretest": "npm run compile",
    "test": "jest",
    "schemas2ts": "json2ts schemas/app.schema.json src/app/AppModel.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nRFCloud/device-simulator.git"
  },
  "author": "Nordic Semiconductor ASA | nordicsemi.no",
  "license": "BSD-3-Clause",
  "bugs": {
    "url": "https://github.com/nRFCloud/device-simulator/issues"
  },
  "homepage": "https://github.com/nRFCloud/device-simulator#readme",
  "devDependencies": {
    "@commitlint/cli": "^7.5.2",
    "@commitlint/config-angular": "^7.5.0",
    "@nrfcloud/tslint-config": "^3.8.0",
    "@types/aws-iot-device-sdk": "^2.1.1",
    "@types/jest": "^24.0.11",
    "@types/node": "^11.11.4",
    "husky": "^1.3.1",
    "jest": "^24.5.0",
    "json-schema-to-typescript": "^6.0.1",
    "prettier": "^1.16.4",
    "ts-jest": "^24.0.0",
    "tslint": "^5.11.0",
    "typescript": "^3.1.6"
  },
  "dependencies": {
    "aws-iot-device-sdk": "^2.2.1",
    "aws-sdk": "^2.352.0",
    "colors": "^1.3.2",
    "commander": "^2.19.0",
    "tcomb": "^3.2.28"
  },
  "jest": {
    "preset": "ts-jest",
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/dist/"
    ]
  },
  "engines": {
    "node": ">=8.0.0",
    "npm": ">=6.0.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "release": {
    "branch": "saga",
    "remoteTags": true
  },
  "files": [
    "package-lock.json",
    "dist",
    "scripts",
    "README.md",
    "LICENSE"
  ],
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -e",
      "pre-commit": "npm run lint"
    }
  }
}
