{
  "name": "nrfcloud-device-simulator",
  "version": "1.0.1",
  "description": "paring simulator for nrfcloud-compatible devices",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "scripts": {
    "precompile": "npm run clean && npm run schemas2ts",
    "clean": "rimraf dist/*",
    "build": "npm run lint && npm run compile",
    "compile": "npm run compile:ts",
    "compile:ts": "tsc",
    "lint": "tslint --project ./tsconfig.json",
    "lintfix": "tslint --project ./tsconfig.json --fix",
    "test": "jest",
    "schemas2ts": "json2ts schemas/app.schema.json src/app/AppModel.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/NordicPlayground/nrfcloud-device-simulator.git"
  },
  "author": "Nordic Semiconductor ASA | nordicsemi.no",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/NordicPlayground/nrfcloud-device-simulator/issues"
  },
  "homepage": "https://github.com/NordicPlayground/nrfcloud-device-simulator#readme",
  "devDependencies": {
    "@types/aws-iot-device-sdk": "^2.1.1",
    "@types/jest": "^23.3.9",
    "@types/node": "^10.12.3",
    "jest": "^23.6.0",
    "json-schema-to-typescript": "^6.0.1",
    "pem": "^1.13.2",
    "rimraf": "^2.6.2",
    "ts-jest": "^23.10.4",
    "tslint": "^5.11.0",
    "typescript": "^3.1.6"
  },
  "dependencies": {
    "aws-iot-device-sdk": "^2.2.1",
    "aws-sdk": "^2.352.0",
    "colors": "^1.3.2",
    "commander": "^2.19.0",
    "dotenv": "^6.1.0",
    "tcomb": "^3.2.28"
  },
  "jest": {
    "preset": "ts-jest",
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/dist/"
    ]
  },
  "engines": {
    "node": ">=6.10.2"
  }
}
