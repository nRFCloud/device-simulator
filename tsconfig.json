{
    "compileOnSave": true,
    "compilerOptions": {
        "module": "commonjs",
        "moduleResolution": "node",
        "declaration": true,
        "target": "es2015",
        "sourceMap": true,
        "emitDecoratorMetadata": false,
        "outDir": "dist/",
        "noUnusedParameters": true,
        "noUnusedLocals": true,
        "lib": [
            "es6"
        ],
        "strict": true
    },
    "include": [
        "src/**/*"
    ]
}
