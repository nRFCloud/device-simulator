{
    "version": "2.3.4",
    "compileOnSave": true,
    "compilerOptions": {
        "module": "commonjs",
        "moduleResolution": "node",
        "declaration": true,
        "target": "es2015",
        "noImplicitAny": true,
        "sourceMap": true,
        "emitDecoratorMetadata": false,
        "outDir": "dist/",
        "noUnusedParameters": true,
        "noUnusedLocals": true,
        "types": [
            "node"
        ],
        "alwaysStrict": true
    },
    "include": [
        "src/**/*"
    ]
}